{% extends 'base.html.twig' %}

{% block title %}Voir le véhicule{% endblock %}

{% block body %}
<div class="container mt-5">
    <div class="card mb-3 mx-auto">
  <h3 class="card-header">{{ vehicule.titre }}</h3>
  <div class="card-body">
    <h5 class="card-title">{{ vehicule.modele }}</h5>
    <h6 class="card-subtitle text-muted">{{ vehicule.marque }}</h6>
  </div>
  <svg xmlns="http://www.w3.org/2000/svg" class="d-block user-select-none" width="100%" height="200" aria-label="Placeholder: Image cap" focusable="false" role="img" preserveAspectRatio="xMidYMid slice" viewBox="0 0 318 180" style="font-size:1.125rem;text-anchor:middle">
    <rect width="100%" height="100%" fill="#868e96"></rect>
    <text x="50%" y="50%" fill="#dee2e6" dy=".3em">{{ vehicule.photo }}</text>
  </svg>
  <div class="card-body">
    <p class="card-text">{{ vehicule.description }}</p>
  </div>
  <ul class="list-group list-group-flush">
    <li class="list-group-item">{{ vehicule.prixJournalier }} €/jour</li>
  </ul>
  <div class="card-body">
  {% if app.user %}
      <a href="{{ path('reserve_vehicule', {id: vehicule.id, user: app.user.id}) }}" class="btn btn-success">Réserver ce véhicule</a>
  {% else %}
      <a href="{{ path('app_login') }}" class="btn btn-info">Connectez-vous pour réserver ce véhicule</a>
  {% endif %}
  
{# {% if app.user = admin %}
    <a href="#" class="card-link">Modifier le véhicule</a>
{% endif %} #}
  </div>
    <div class="card-footer text-muted">
        {{ vehicule.dateEnregistrement|date('d/m/Y, H:i:s') }}  </div>
    </div>
</div>

{% endblock %}
